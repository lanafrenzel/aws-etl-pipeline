{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "SpectrumGlueCatalogRead",
      "Effect": "Allow",
      "Action": [
        "glue:GetDatabase",
        "glue:GetDatabases",
        "glue:GetTable",
        "glue:GetTables",
        "glue:GetPartition",
        "glue:GetPartitions"
      ],
      "Resource": [
        "arn:aws:glue:us-east-1:334960985201:catalog",
        "arn:aws:glue:us-east-1:334960985201:database/your_db",
        "arn:aws:glue:us-east-1:334960985201:table/your_db/*"
      ]
    },
    {
      "Sid": "CleanDataS3Access",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::your-bucket",
        "arn:aws:s3:::your-bucket/clean/*"
      ]
    }
  ]
}
