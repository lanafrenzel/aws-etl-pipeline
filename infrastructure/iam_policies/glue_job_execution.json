{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "GlueJobExecution",
      "Effect": "Allow",
      "Action": [
        "glue:GetTable",
        "glue:GetTables",
        "glue:GetDatabase",
        "glue:GetDatabases",
        "glue:CreateTable",
        "glue:UpdateTable",
        "glue:CreatePartition",
        "glue:BatchCreatePartition"
      ],
      "Resource": [
        "arn:aws:glue:us-east-1:334960985201:catalog",
        "arn:aws:glue:us-east-1:334960985201:database/etl_clean_db",
        "arn:aws:glue:us-east-1:334960985201:table/etl_clean_db/*"
      ]
    },
    {
      "Sid": "GlueS3Access",
      "Effect": "Allow",
      "Action": [
        "s3:PutObject",
        "s3:GetObject",
        "s3:DeleteObject",
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::lana-etl-pipeline",
        "arn:aws:s3:::lana-etl-pipeline/raw/*",
        "arn:aws:s3:::lana-etl-pipeline/clean/*"
      ]
    },
    {
      "Sid": "GlueScriptAccess",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject"
      ],
      "Resource": [
        "arn:aws:s3:::aws-glue-assets-334960985201-us-east-1/scripts/*"
      ]
    }
  ]
}
